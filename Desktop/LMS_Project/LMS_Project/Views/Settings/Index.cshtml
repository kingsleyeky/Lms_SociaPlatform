@model LMS_Project.ViewModel.ChangePasswordDTO

@{ 
    Layout = "_DashBoardLayout";
}
<form method="post"> 


    <div class="form-group">
        <label asp-for="OldPassword">Old Password:</label>
        <input asp-for="OldPassword" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="NewPassword">New Password:</label>
        <input asp-for="NewPassword" class="form-control"> 
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Comfirm Password:</label>
        <input asp-for="ConfirmPassword" class="form-control">
    </div>
    <button asp-controller="Settings" asp-action="Index" style="background-color:blue">Update</button>

</form>